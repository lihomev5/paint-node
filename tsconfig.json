{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "removeComments": true,
      "target": "esnext",
      "noImplicitAny": true,
      "inlineSourceMap": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*" : [
          "node_modules/*"
        ]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./typings"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}